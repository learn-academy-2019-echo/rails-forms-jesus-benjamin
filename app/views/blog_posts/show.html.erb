<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<div>
  <%= link_to "All Posts", all_posts_path %>
</div>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= comment.content %> :: by - <%= comment.author_name %>
    </li>
  <% end %>
</ul>

<%= link_to "Update Post", blog_edit_path(@post) %>
<%= link_to "Delete Post", blog_post_path(@post), method: :delete %>
